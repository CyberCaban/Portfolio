---
import Layout from "../layouts/Layout.astro";
import ProjectSlide from "../components/ProjectSlide.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="main-slide">
      <h1 class="text-gradient firstname">Dmitry</h1>
      <h1 class="lastname">Konovalov</h1>
    </section>
    <div class="myProjects">
      <ProjectSlide
        href="https://tags-react.vercel.app/"
        title="Tags React"
        description="It's my first project with React Functional components. Building it i learned how works useState"
        imgsrc="./tags_react/index.png"
      />
      <ProjectSlide
        href="https://poke-center.vercel.app/"
        title="Poke-Center"
        description="This project taught me how to use useEffect, make API calls and display it on the client."
        imgsrc="./poke-center/index.png"
      />
      <ProjectSlide
        href="https://github.com/CyberCaban/Webpack-template"
        title="Webpack template"
        description="Webpack config i use for my other projects. It's based on create-react-app config, but lighter"
        imgsrc="./webpack-template/index.png"
      />
      <ProjectSlide
        href="https://github.com/CyberCaban/musify"
        title="Musify"
        description="Musify is my backend experience with NodeJS, Express, database interaction, user authentication with json web tokens and more."
        imgsrc="./musify/index.png"
      />
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 100%;
    height: auto;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .main-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0 auto;
    background-color: var(--accent);
  }
  .firstname {
    position: absolute;
    left: 0;
    bottom: 4rem;
  }
  .lastname {
    position: absolute;
    left: 0;
    bottom: 0;
  }
  .myProjects {
    position: absolute;
    top: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
